  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Population script",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/main.py",
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Pytest: Specific test",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${lineNumber}"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: Specific file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${relativeFile}"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: Specific folder",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${relativeFileDirname}"],
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Pytest: All",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${workspaceFolder}/tests"],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
